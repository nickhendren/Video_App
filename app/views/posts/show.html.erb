<div class="page-header">
  <h1><%= @post.title %><small> <%= @post.date_published %> </small></h1>
</div>
  <p> <%= @post.media_url %></p>
  <% @post.comments.each do |comment| %>
  <ul class="list-group">
    <li class="list-group-item"><%= comment.body %>
    <small><% if comment.user %>
            <%= comment.user.user_name %>
            <%else %>
            Anonymous User
            <%end%>
    </small></li>
  </ul>
  <%end%>

  <div class="">
    <%= form_for [@post, Comment.new] do |f| %>
    <div>
        <%= f.label :body, "New comment:" %>
        <%= f.text_area :body %>

    </div>

    <%= f.submit "Add your comment!" %>
    <% end %>
</div>
