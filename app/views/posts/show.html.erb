<div class="container">
  <div class="row">
    <div class="col-lg-offset-3 col-lg-6 col-md-offset-3 col-md-6 col-sm-offset-3 col-sm-6">
      <div class="thumbnail">
        <div class="caption">
          <%= form_for [@post, Comment.new] do |f| %>
            <%= f.label :body, "New comment:", class: "form-control" %>
            <%= f.text_area :body, class: "col-sm-2 control-label", class: "form-control", placeholder: "Add a new comment here" %>
            <%= f.submit "Add your comment!", class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-offset-3 col-lg-6 col-md-offset-3 col-md-6 col-sm-offset-3 col-sm-6">
      <div class="thumbnail">
        <div class="caption">
          <h1><%= @post.title %><small> <%= @post.date_published %> </small></h1>
          <p><%= link_to @post.media_url, @post.media_url %></p>
          <% @post.comments.each do |comment| %>
          <ul class="list-group-item">
            <p>User: <strong><% if comment.user %>
                    <%= comment.user.user_name %>
                    <%else %>
                    Anonymous User
                    <%end%></strong><p>
            <ul><%= comment.body %></ul>
          </ul>
          <%end%>
        </div>
      </div>
    </div>
  </div>
</div>
