<% @posts.each do |p| %>
<div class="row">
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <div class="caption">
        <h3><%= p.title %></h3>
        <p><%= p.media_url %></p>
        <p><%= link_to "Go to Post", post_path(p), class: "btn btn-primary" %></p>
      </div>
    </div>
  </div>
</div>
<%end%>
